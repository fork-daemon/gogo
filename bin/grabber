shuffle($grabbing);

foreach ($grabbing as $options) {
    $url = $options['url'];
    $targetFolder = isset($options['folder']) ? $options['folder'] : '_output/';

    $folder = $targetFolder . '/' . Url::info($url, Url::HOST);

    if ($options['type'] === 'site') {
        $site = new Site($url, $folder, 3);

    } else {
        $page = new Page($url, $folder);
        $page->save();
    }
}



